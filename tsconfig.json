{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "incremental": true,
      "declaration": true,
      "removeComments": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "typeRoots": ["./src/types", "node_modules/@types"],
      "moduleResolution": "node",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", ".vscode"]
  }